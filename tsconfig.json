{
	"compilerOptions": {
		"outDir": "dist/",
		"sourceMap": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES6",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,

        "paths": {
            "src/*": ["./src/*"],
			"@typings/*": ["../Shared/typings/*", "Typings/typings/*", "node_modules/seventv-typings/typings/*"],
			"@Config": ["./config.json"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "useRootDirs": true
            }
        ]
	},

	"include": [
		"src/**/*"
	],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts"
    ]
}
